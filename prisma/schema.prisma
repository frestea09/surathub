generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  nip       String   @unique
  nama      String
  jabatan   String
  status    String // "Aktif" or "Non-Aktif"
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// A generic model to hold all types of letters.
// The `content` field can store form-specific data for each letter type as JSON.
model Surat {
  id        String     @id @default(cuid())
  nomor     String     @unique
  perihal   String
  tanggal   DateTime
  jenis     SuratJenis
  status    String
  tujuan    String
  content   Json?      // Stores the form-specific data, e.g., items, narasi, etc.
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum SuratJenis {
  SURAT_PERINTAH
  SURAT_PESANAN_INTERNAL
  SURAT_PESANAN_VENDOR
  BERITA_ACARA_PEMERIKSAAN
  BERITA_ACARA_SERAH_TERIMA
  MASUK
}
